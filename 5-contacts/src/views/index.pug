doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Lato:wght@100;400;700&display=swap" rel="stylesheet")
        link(rel="shortcut icon", href="assets/favicon.ico", type="image/x-icon")
        link(rel="stylesheet", href="css/styles.css")
        title Contacts - App
    body 
        h1.title Contacts
        form#form.form
            input#input.form__input(type="text" placeholder="Search for a name")
            button#btn.form__btn Send 
        div#app.contacts__container
        
        div#layer
        form#modal-window.modal-window.disappear
            div.modal-window__item
                label(for="input-modal-name") Name 
                input#input-modal-name(type="text")
            div.modal-window__item
                label(for="input-modal-number") Telephone-Number 
                input#input-modal-number(type="text")
            button#btn-modal.btn-update Update
        
        span#post-new-contact: img.new-contact__btn(src="assets/add-circle.svg", alt="")
        script(src="js/app.js" type="module") 